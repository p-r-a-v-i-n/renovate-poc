{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":gitSignOff"],
  "rangeStrategy": "widen",
  "prConcurrentLimit": 2,
  "schedule": ["at any time"],
  "python": {
    "fileMatch": ["(^|/)(pyproject|Pipfile)\\.toml$"]
  },
  "dependencyDashboard": true,
  "commitMessagePrefix": "chore(deps): ",
  "packageRules": [
    {
      "description": "Group all major updates into a single PR for review",
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "automated"],
      "groupName": "major-dependencies",
      "automerge": false
    },
    {
      "description": "Auto-merge patch and minor updates for requests",
      "matchPackageNames": ["requests"],
      "matchUpdateTypes": ["patch", "minor"],
      "labels": ["optional-dependencies", "automated"],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
